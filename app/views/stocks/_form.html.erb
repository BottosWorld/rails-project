<%= form_for(stock) do |f| %>
  <div>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </div><br>
  <div>
    <%= f.label :ticker %> <br>
    <%= f.text_field :ticker %>
  </div><br>
  <div>
    <%= f.label :value %> <br>
    <%= f.number_field :value %>
  </div><br>

  <%= f.submit button_name %>
<% end %>