<h1>Welcome <%= current_user.email %></h1>

<table class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Watch List Name</th>
      <th scope="col">Delete</th>
    </tr>

    <tbody>
        <% @watch_lists.each do |list| %>
        <tr>
            <td><%= link_to list.list_name, list %></td>
            <!-- <td><%= link_to "Edit", edit_watch_list_url(@watch_lists)%></td> -->
            <td><%= button_to "Delete", list, method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "Create a new watch list", new_watch_list_path, class: 'btn btn-primary' %>