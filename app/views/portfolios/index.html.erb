<h1>Welcome <%= current_user.email %>, create your <%= link_to "Portfolio", new_portfolio_path, class: 'btn btn-secondary' %></h1>

<table class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Portfolio Name</th>
      <th scope="col">Edit</th>
      <th scope="col">Belongs To User #</th>
    </tr>

    <tbody>
        <% @portfolios.each do |portfolios| %>
        <tr>
            <td><%= link_to "$#{portfolios.investing}", portfolios %></td>
            <td><%= link_to "Edit Portfolio", edit_portfolio_path(portfolios)%></td>
            <td><%= portfolios.user_id%></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "View Stocks", stocks_path, class: 'btn btn-primary' %>